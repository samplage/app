{
  "name": "@samplage/mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "test": "jest",
    "ios": "cd ios && pod install && cd ../ && react-native run-ios --simulator=\"iPad Air 2\"",
    "android": "react-native run-android",
    "tsc": "tsc",
    "clean": "shx rm -rf ios/build&& rm -rf ios/Pods && rm -rf android/build && rm -rf node_modules && watchman watch-del-all",
    "studio": "open -a /Applications/Android\\ Studio.app ./android/",
    "xcode": "open ios/samplage.xcworkspace"
  },
  "dependencies": {
    "@react-native-community/google-signin": "4.0.3",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-firebase/app": "8.2.0",
    "@react-native-firebase/auth": "8.2.0",
    "@react-native-firebase/storage": "7.2.2",
    "@react-navigation/native": "^5.7.0",
    "react-native": "0.63.1",
    "react-native-bootsplash": "^2.2.5",
    "react-native-gesture-handler": "^1.6.1",
    "react-native-reanimated": "^1.9.0",
    "react-native-safe-area-context": "^3.1.1",
    "react-native-screens": "^2.9.0",
    "react-native-svg": "12.1.0",
    "react-native-video": "4.4.5"
  },
  "devDependencies": {
    "@types/react-native": "0.63.1",
    "metro-react-native-babel-preset": "0.60.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
