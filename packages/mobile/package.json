{
  "name": "@samplage/mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "test": "jest",
    "ios": "cd ios && pod install && cd ../ && react-native run-ios --simulator=\"iPad Air 2\"",
    "android": "react-native run-android",
    "tsc": "tsc",
    "clean": "shx rm -rf ios/build&& rm -rf ios/Pods && rm -rf android/build && rm -rf node_modules && watchman watch-del-all",
    "studio": "open -a /Applications/Android\\ Studio.app ./android/",
    "xcode": "open ios/samplage.xcworkspace"
  },
  "dependencies": {
    "@react-native-community/google-signin": "4.0.0",
    "@react-native-firebase/app": "6.7.1",
    "@react-native-firebase/auth": "6.7.1",
    "@react-native-firebase/storage": "6.7.1",
    "react-native": "0.63.0-rc.0"
  },
  "devDependencies": {
    "@types/react-native": "0.62.3",
    "metro-react-native-babel-preset": "0.59.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
